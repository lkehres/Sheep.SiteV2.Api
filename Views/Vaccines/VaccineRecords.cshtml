@model IEnumerable<Sheep.SiteV2.Api.Models.Vaccine>
@{
        ViewData["Title"] = "   Vaccines Page";
}

        <h2>Vaccine Records</h2>
        <h3>Last updated: @(System.DateTime.Now)</h3>
        <button type="button" onclick="alert('This feature not available until version 2!')">Add New Vaccine</button>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Vaccine ID</th>
                    <th>Animal ID</th>
                    <th>Name</th>
                    <th>Dosage</th>
                    <th>Date</th>
                    <th>Comments</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var vaccine in Model)
                {
                    <tr>
                        <td>@vaccine.vaccineID</td>
                        <td>@vaccine.vAnimalId</td>
                        <td>@vaccine.vaccineName</td>
                        <td>@vaccine.vaccineDosage</td>
                        <td>@vaccine.vaccineDate</td>
                        <td>@vaccine.vaccineComment</td>
                    </tr>
                }
            </tbody>
        </table>