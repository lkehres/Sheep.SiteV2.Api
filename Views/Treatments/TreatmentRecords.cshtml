@model IEnumerable<Sheep.SiteV2.Api.Models.Treatment>
@{
        ViewData["Title"] = "Treatments Page";
}

        <h2>Treatment Records</h2>
        <h3>Last updated: @(System.DateTime.Now)</h3>
        <button type="button" onclick="alert('This feature not available until version 2!')">Add New Treatment</button>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Treatment ID</th>
                    <th>Animal ID</th>
                    <th>Name</th>
                    <th>Dosage</th>
                    <th>Date</th>
                    <th>Comments</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var treatment in Model)
                {
                    <tr>
                        <td>@treatment.treatmentID</td>
                        <td>@treatment.tAnimalId</td>
                        <td>@treatment.treatmentName</td>
                        <td>@treatment.treatmentDosage</td>
                        <td>@treatment.treatmentDate</td>
                        <td>@treatment.treatmentComment</td>
                    </tr>
                }
            </tbody>
        </table>